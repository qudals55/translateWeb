html
  head
    meta(charset='utf-8')
    style
      include login.css
  body
    div(id='wapper')
      video(autoplay muted loop id="myVideo")
        source(src="/loginPart/Videochat.mp4" type="video/mp4")
      .wrapper.fadeInDown
        div
          h1.title L &nbsp&nbsp&nbsp T &nbsp&nbsp&nbsp E
          h5.title language translate easily
